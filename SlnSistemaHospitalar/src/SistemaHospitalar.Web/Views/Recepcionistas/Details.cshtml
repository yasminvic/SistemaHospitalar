@model SistemaHospitalar.Domain.DTO.RecepcionistaDTO

@{
    ViewData["Title"] = "Details";
}

<h1 class="menu-title display-3 text-center mt-3">@Model.pessoaId</h1>

<div>
    <h4 class="text-white mt-5">Dados Pessoais</h4>
    <hr class="bg-light"/>
    <dl class="row">
        <dt class = "col-sm-2 menu-title">
            @Html.DisplayNameFor(model => model.id)
        </dt>
        <dd class = "col-sm-10 text-white">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class = "col-sm-2 menu-title">
            @Html.DisplayNameFor(model => model.pessoaId)
        </dt>
        <dd class = "col-sm-10 text-white">
            @Html.DisplayFor(model => model.pessoaId)
        </dd>
        <dt class = "col-sm-2 menu-title">
            @Html.DisplayNameFor(model => model.bloco)
        </dt>
        <dd class = "col-sm-10 text-white">
            @Html.DisplayFor(model => model.bloco)
        </dd>
    </dl>
</div>
<div class="mt-5">
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.id" data-bs-toggle="tooltip" data-bs-html="true" data-bs-title="Editar">
        <img  width="30" height="30" src="~/img/editar.png">
    </a> 
    <a class="btn btn-dark" asp-action="Index" data-bs-toggle="tooltip" data-bs-html="true" data-bs-title="Voltar para lista">
        <img width="30" height="30" src="~/img/back.png"/>
    </a>
</div>
