@using SistemaHospitalar.Domain.Entities
@using SistemaHospitalar.Domain.Enum
@model SistemaHospitalar.Domain.DTO.MedicoDTO

@{
    ViewData["Title"] = "Criar";
}

<div class="text-center title-page">
    <h1 class="display-1 fw-bold text-success mt-5 mb-5"><strong>Adicionar Médico</strong></h1>
</div>                      

<form asp-controller="Medicos" asp-action="Create" method="post">
 <div class="container">
    <div class="row justify-content-center">
    <div class="col-3">
        <div class="form-group text-dark">
        <label asp-for="crm" for="crm" class="color-label">CRM</label>
<input asp-for="crm" type="text" class="form-control"  aria-describedby="emailHelp" placeholder="Informe o CRM">
<span asp-validation-for="crm" class="text-danger"></span>  

        <label autofocus asp-for="especialidade" for="especialidadeId" class="color-label">Especialidade:</label>
        <select asp-for="especialidadeId" class="form-control" asp-items="ViewBag.EspecialidadeId"></select>
        <span asp-validation-for="especialidadeId" class="text-danger"></span> 


    </div>
            <div class="form-group mt-3 d-flex">
                <a id="btn-pessoa" class="btn btn-warning btn-sm btn-block w-100 float-start" onclick="createPessoa()" data-bs-toggle="modal" data-bs-target="#formModal">Cadastrar Dados Pessoais</a>
                <input type="submit" value="Cadastrar Médico" class="btn ms-2 btn-primary btn-block w-100 btn-sm float-end" />
            </div>
             <a class="btn btn-info btn-block w-100 mt-3" onclick="createEndereco()" data-bs-toggle="modal" data-bs-target="#formModal">Cadastrar Endereço</a>
         </div>

         

    
    </div>
 </div> 
                                   
</form>


<div>
    <a class="btn btn-dark" asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



