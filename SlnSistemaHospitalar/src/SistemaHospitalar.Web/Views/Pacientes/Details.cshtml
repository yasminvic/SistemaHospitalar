@model SistemaHospitalar.Domain.DTO.PacienteDTO

@{
    ViewData["Title"] = "Details";
}

<h1 class="display-3 text-center mt-3">@Model.pessoa.nome @Model.pessoa.sobrenome</h1>

<div>
    <hr class="bg-light" />
    <dl class="row">
        <h4 class="text-success fw-bold mb-5 mt-5">Dados do Paciente</h4>
        <dt class="col-sm-3 menu-listagem">
            @Html.DisplayNameFor(model => model.id)
        </dt>
        <dd class="col-sm-10 text-dark menu-listagem">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class="col-sm-3 menu-listagem">
            @Html.DisplayNameFor(model => model.pessoa.id)
        </dt>
        <dd class="col-sm-10 text-dark menu-listagem">
            @Html.DisplayFor(model => model.pessoa.id)
        </dd>
        <dt class="col-sm-3 menu-listagem">
            @Html.DisplayNameFor(model => model.convenio.nome)
        </dt>
        <dd class="col-sm-10 text-dark menu-listagem">
            @Html.DisplayFor(model => model.convenio.nome)
        </dd>
        <dt class="col-sm-3 menu-listagem">
            @Html.DisplayNameFor(model => model.situacao)
        </dt>
        <dd class="col-sm-10 text-dark menu-listagem">
            @Html.DisplayFor(model => model.situacao)
        </dd>

        <h4 class="text-success fw-bold mb-5  mt-5">Dados Pessoais</h4>
        <div class="row">
            <div class="col">
                <dt class="col-sm-2 menu-listagem">
                    @Html.DisplayNameFor(model => model.pessoa.nome)
                </dt>
                <dd class="col-sm-10 text-dark menu-listagem">
                    @Html.DisplayFor(model => model.pessoa.nome)
                </dd>
                <dt class="col-sm-2 menu-listagem">
                    @Html.DisplayNameFor(model => model.pessoa.sobrenome)
                </dt>
                <dd class="col-sm-10 text-dark menu-listagem">
                    @Html.DisplayFor(model => model.pessoa.sobrenome)
                </dd>
                <dt class="col-sm-2 menu-listagem">
                    @Html.DisplayNameFor(model => model.pessoa.cpf)
                </dt>
                <dd class="col-sm-10 text-dark menu-listagem">
                    @Html.DisplayFor(model => model.pessoa.cpf)
                </dd>
                <dt class="col-sm-2 menu-listagem">
                    @Html.DisplayNameFor(model => model.pessoa.telefone)
                </dt>
                <dd class="col-sm-10 text-dark menu-listagem">
                    @Html.DisplayFor(model => model.pessoa.telefone)
                </dd>
                <dt class="col-sm-2 menu-listagem">
                    @Html.DisplayNameFor(model => model.pessoa.email)
                </dt>
                <dd class="col-sm-10 text-dark menu-listagem">
                    @Html.DisplayFor(model => model.pessoa.email)
                </dd>
            </div>
            <div class="col">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.pessoa.dataNascimento)
                </dt>
                <dd class="col-sm-10 text-dark">
                    @Html.DisplayFor(model => model.pessoa.dataNascimento)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.pessoa.naturalidade)
                </dt>
                <dd class="col-sm-10 text-dark">
                    @Html.DisplayFor(model => model.pessoa.naturalidade)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.pessoa.sexo)
                </dt>
                <dd class="col-sm-10 text-dark">
                    @Html.DisplayFor(model => model.pessoa.sexo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.pessoa.perfil)
                </dt>
                <dd class="col-sm-10 text-dark">
                    @Html.DisplayFor(model => model.pessoa.perfil)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.pessoa.createdOn)
                </dt>
                <dd class="col-sm-10 text-dark">
                    @Html.DisplayFor(model => model.pessoa.createdOn)
                </dd>
            </div>
        </div>
    </dl>
</div>
<div class="mt-5">
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.id" data-bs-toggle="tooltip" data-bs-html="true" data-bs-title="Editar">
        <img width="30" height="30" src="~/img/editar.png">
    </a>
    <a class="btn btn-dark" asp-action="Index" data-bs-toggle="tooltip" data-bs-html="true" data-bs-title="Voltar para lista">
        <img width="30" height="30" src="~/img/back.png" />
    </a>
</div>
