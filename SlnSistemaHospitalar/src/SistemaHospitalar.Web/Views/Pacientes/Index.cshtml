                        <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.id" data-bs-toggle="tooltip" data-bs-html="true" data-bs-title="Ver Detalhes">Details</a> |
                        <a class="btn btn-danger" href="#" onclick="deletePaciente(@item.id)">Delete</a> 
                        <a class="btn btn-info" href="#" onclick="carregaProntuario(@item.id)" data-bs-toggle="modal" data-bs-target="#formModal">Add Prontuário</a>
                    </td>
            </tr>
        }
    </tbody>
</table>

