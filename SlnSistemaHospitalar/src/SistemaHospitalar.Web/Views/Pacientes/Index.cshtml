            </th>
            <th>
                @Html.DisplayNameFor(model => model.pessoa.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.convenioId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.situacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
