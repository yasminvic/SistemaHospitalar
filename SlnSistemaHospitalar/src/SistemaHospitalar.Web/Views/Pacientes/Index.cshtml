@model IEnumerable<SistemaHospitalar.Domain.DTO.PacienteDTO>

@if (TempData["MensagemSucesso"] != null)
{
            <div class="alert alert-success alert-dismissible" role="alert">
               <div> @TempData["MensagemSucesso"]</div>
               <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
}

@if (TempData["MensagemErro"] != null)
{
        <div class="alert alert-danger d-flex align-items-center" role="alert">
        @TempData["MensagemErro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
}

<p>
    <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#formModal">Add Pessoa</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pessoaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.convenioId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.situacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pessoaId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.convenioId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.situacao)
                </td>
                <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id" data-bs-toggle="tooltip" data-bs-html="true" data-bs-title="Editar">Edit</a> |
                        <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.id" data-bs-toggle="tooltip" data-bs-html="true" data-bs-title="Ver Detalhes">Details</a> |
                        <a class="btn btn-danger" href="#" onclick="deleteCategory(@item.id)" data-bs-toggle="tooltip" data-bs-html="true" data-bs-title="Excluir">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        const deleteCategory = (idParam) => {
            msgModalMessage(`Deseja realmente excluir o registro ${idParam}?`, () => {
                $.ajax({
                    url: `@Url.Action("Delete")`,
                    method: 'POST',
                    data: {
                        id: idParam
                    },
                    success: (resp) => {
                        if(resp.code == '200') {
                            liveToastMessage(`O Registro ${idParam} foi excluído.`, 'Category');
                            setTimeout(()=>{window.location.reload();},4000);
                        }
                    }
                });
                closeMsgModalMessage();
            });
        }

            $(document).ready(()=>{
                $.ajax({
                    url: '../Pessoas/Create',
                    dataType: 'html',
                    success: (response) =>{
                        $('#modal-body').html(response)
                    }
                });
            });
    </script>
}

