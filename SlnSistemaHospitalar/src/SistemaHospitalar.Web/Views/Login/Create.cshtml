@model SistemaHospitalar.Web.Models.LoginModel

@{
    Layout = "_LayoutDeslogada";
    ViewData["Title"] = "Login";
}

@if (TempData["MensagemErro"] != null)
{
        <div class="alert alert-danger d-flex align-items-center" role="alert">
        @TempData["MensagemErro"]
        </div>
}

<div class="container mt-5">

    <div class="row">
    <div class="col img-login " style="height: 30vw; width: 100vw;">
        <img class="img-fluid w-75" src="~/img/icone-contato.png" />
    </div>

    <div class="col form-login container">
        <h1 class="text-center mt-3 login-title fw-bold">Login</h1>

        <hr class="w-75 mx-auto bg-"/>
        <div class="row">
            <div class="container w-75">
                <form asp-controller="Login" asp-action="Entrar" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="login" class="control-label login-title mt-2"></label>
                        <input asp-for="login" class="form-control d-block" />
                        <span asp-validation-for="login" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="senha" class="control-label login-title mt-2"></label>
                        <input asp-for="senha" type="password" class="form-control" />
                        <span asp-validation-for="senha" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Entrar" class="btn btn-primary btn-block w-100" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
