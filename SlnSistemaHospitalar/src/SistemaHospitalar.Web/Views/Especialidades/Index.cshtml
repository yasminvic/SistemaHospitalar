@model IEnumerable<SistemaHospitalar.Domain.DTO.EspecialidadeMedicaDTO>

@if (TempData["MensagemSucesso"] != null)
{
            <div class="alert alert-success alert-dismissible" role="alert">
               <div> @TempData["MensagemSucesso"]</div>
               <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
}

@if (TempData["MensagemErro"] != null)
{
        <div class="alert alert-danger d-flex align-items-center" role="alert">
        @TempData["MensagemErro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
}

<h1 class="display-4 mt-5 text-center">Especialidade Médica</h1>

<p>
    <a class="btn btn-primary mt-5" asp-action="Create">Cadastrar Especialidade</a>
</p>

<div class="index table-responsive">
<table class="table table-striped table-hover table-sm table-dark" id="table-index">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nome)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id" data-bs-toggle="tooltip" data-bs-html="true" data-bs-title="Editar">
                        <img  width="30" height="30" src="~/img/editar.png">
                    </a>
                        <a class="btn btn-danger" href="#" onclick="deleteRegistro(@item.id, 'Especialidade', '/Especialidades/Delete')" data-bs-toggle="tooltip" data-bs-html="true" data-bs-title="Excluir">
                        <img width="30" height="30" src="~/img/lixeira.png">
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

