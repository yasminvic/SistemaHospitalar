@using SistemaHospitalar.Domain.Entities
@using SistemaHospitalar.Domain.Enum;
@model SistemaHospitalar.Domain.DTO.PessoaDTO

<div class="container-fluid position-static">
    <a class="navbar-brand text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Hollywood News</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="nav-link text-white " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="NoticiasVisiveis" asp-action="Index">Notícias</a>
            </li>

            @if (Model.perfil == PerfilEnum.Admin)
            {
                <ul>
                    <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Convenios" asp-action="Index">Convênio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pessoas" asp-action="Index">Pessoa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pacientes" asp-action="Index">Paciente</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Medicos" asp-action="Index">Médicos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Especialidades" asp-action="Index">Especialidades</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Recepcionistas" asp-action="Index">Recepcionistas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Enderecos" asp-action="Index">Endereços</a>
                        </li>
                    </ul>

            }

            if(Model.perfil == PerfilEnum.Medico){
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Pacientes" asp-action="Index">Paciente</a>
                </li>
            }

            if(Model.perfil == PerfilEnum.Recepcionista){
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Pacientes" asp-action="Index">Paciente</a>
                </li>
            }


            <li class="nav-item dropdown position-absolute end-0 top-0">
              <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    @Model.nome
                    <img class="me-2 img-menu" src="~/img/user.png" />
              </a>
              <ul class="dropdown-menu">
                <li><a asp-controller="Login" asp-action="Sair" class="dropdown-item">Log Out</a></li>
              </ul>
        </li>
        </ul>
    </div>
</div>
