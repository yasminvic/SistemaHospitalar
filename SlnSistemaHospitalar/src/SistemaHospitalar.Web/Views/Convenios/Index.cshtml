@model IEnumerable<SistemaHospitalar.Domain.DTO.ConvenioDTO>

@if (TempData["MensagemSucesso"] != null)
{
            <div class="alert alert-success alert-dismissible" role="alert">
               <div> @TempData["MensagemSucesso"]</div>
               <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
}

@if (TempData["MensagemErro"] != null)
{
        <div class="alert alert-danger d-flex align-items-center" role="alert">
        @TempData["MensagemErro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
}

<p>
    <a class="btn btn-primary" asp-action="Create">Cadastrar Convênio</a>
</p>

<div class="index table-responsive">
<table class="table table-striped table-hover table-sm table-dark" id="table-index">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nome)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.id" data-bs-toggle="tooltip" data-bs-html="true" data-bs-title="Editar">
                        <img  width="30" height="30" src="~/img/editar.png">
                    </a> 
                    <a class="btn btn-danger" href="#" onclick="deleteConvenio(@item.id)" data-bs-toggle="tooltip" data-bs-html="true" data-bs-title="Excluir">
                        <img width="30" height="30" src="~/img/lixeira.png">
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>

@section Scripts {
    <script>
            const deleteConvenio = (idParam) => {
                    msgModalMessage(`Deseja realmente excluir o Convênio ${idParam}?`, 'Convênio',() => {
                        $.ajax({
                            url: `@Url.Action("Delete")`,
                            method: 'POST',
                            data: {
                                id: idParam
                            },
                            success: (resp) => {
                                if(resp.code == '200') {
                                    liveToastMessage(`O Convênio ${idParam} foi excluído.`, 'Convênio');
                                    setTimeout(()=>{window.location.reload();},4000);
                                }
                            }
                        });
                        closeMsgModalMessage();
                    });
                }
    </script>
}

