@model IEnumerable<SistemaHospitalar.Domain.DTO.EnderecoDTO>

@if (TempData["MensagemSucesso"] != null)
{
            <div class="alert alert-success alert-dismissible" role="alert">
               <div> @TempData["MensagemSucesso"]</div>
               <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
}

@if (TempData["MensagemErro"] != null)
{
        <div class="alert alert-danger d-flex align-items-center" role="alert">
        @TempData["MensagemErro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
}

<div class="index table-responsive"> 
<table class="table table-striped table-hover table-sm table-dark" id="table-index">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rua)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.uf)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rua)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cidade)
                </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.uf)
                </td>
                <td>
                        <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.id" data-bs-toggle="tooltip" data-bs-html="true" data-bs-title="Editar">Edit</a> 
                        <a class="btn btn-outline-warning btn-sm" asp-action="Details" asp-route-id="@item.id" data-bs-toggle="tooltip" data-bs-html="true" data-bs-title="Ver Detalhes">Details</a> 
                        <a class="btn btn-outline-danger btn-sm" href="#" onclick="deleteEndereco(@item.id)" data-bs-toggle="tooltip" data-bs-html="true" data-bs-title="Excluir">Delete</a>
            </td>
        </tr>
    }
</tbody>
</table>
</div>

@section Scripts {
    <script>
        const deleteEndereco = (idParam) => {
            msgModalMessage(`Deseja realmente excluir o registro ${idParam}?`, 'Endereço',() => {
                $.ajax({
                    url: `@Url.Action("Delete")`,
                    method: 'POST',
                    data: {
                        id: idParam
                    },
                    success: (resp) => {
                        if(resp.code == '200') {
                            liveToastMessage(`O Registro ${idParam} foi excluído.`, 'Endereço');
                            setTimeout(()=>{window.location.reload();},4000);
                        }
                    }
                });
                closeMsgModalMessage();
            });
        }
    </script>
}

